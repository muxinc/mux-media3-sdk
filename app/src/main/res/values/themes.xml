<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuxVideoMedia3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Green60</item>
        <item name="colorPrimaryVariant">@color/Green70</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Pink40</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. todo- verify this is used -->
        <item name="android:statusBarColor">@color/Gray80</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/Gray100</item>
        <item name="colorOnSurface">@color/White</item>
        <item name="android:colorBackground">@color/BackgroundDark</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.MuxVideoMedia3.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Green60</item>
        <item name="colorPrimaryVariant">@color/Green70</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Pink40</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. todo- verify this is used -->
        <item name="android:statusBarColor">@color/Gray80</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/Gray100</item>
        <item name="colorOnSurface">@color/White</item>
        <item name="android:colorBackground">@color/BackgroundDark</item>
    </style>
    <style name="TextAppearance.App.PlaybackParamLabel" parent="@style/TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
    <style name="TextAppearance.App.PlaybackParamEntry" parent="@style/TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Gray30</item>
        <item name="android:textColorHint">@color/Gray70</item>
    </style>
</resources>